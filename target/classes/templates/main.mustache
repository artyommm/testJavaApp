<html>
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <style>
        * {
           margin: 0;
           padding: 0;
        }

        .container{
           max-width: 1140px;
           margin: 0 auto;
        }



    </style>
</head>
<body>
<div class="container">
    <form method="post" action="product">
        <input type="text" name="name" placeholder="Enter product name"> <br>
        <button type="submit">Add</button>
    </form>

    <div>
        Products list
    </div>
    {{#products}}
    <div>
        <b>{{id}}</b>
        <b>{{name}}</b>
    </div>
    {{/products}}


    <form method="post" action="property">
        <select name="product_id" id="products">
            {{#products}}
            <option value="{{id}}">{{name}}</option>
            {{/products}}
        </select>
        <br>
        <input type="text" name="type" placeholder="Enter product type"> <br>
        <input type="text" name="price" placeholder="Enter product price"> <br>
        <input type="text" name="brand" placeholder="Enter product brand"> <br>
        <br>
        <button type="submit">Add</button>
    </form>

    <div>Properties list</div>
    {{#properties}}
    <div>
        <b>{{id}}</b>
        <b>{{product.id}}</b>
        <b>{{type}}</b>
        <b>{{price}}</b>
        <b>{{brand}}</b>
    </div>
    {{/properties}}

    <form method="post" action="delete_product">
        <select name="id">
            {{#products}}
            <option value="{{id}}">{{name}}</option>
            {{/products}}
        </select>
        <br>
        <button type="submit">Delete</button>
    </form>


    <div>
        Products list with properties: <br>
        Filters:
        <form method="get" action="filter">
            Product type:
            <select name="type">
                <option value="-1">------</option>
                {{#productsTypes}}
                <option value="{{type}}">{{type}}</option>
                {{/productsTypes}}
            </select>
            Sorting:
            <select name="type">
            <option value="-1">------</option>
            <option value="asc">Product price asc</option>
            <option value="desc">Product price desc</option>
        </select>
            <button type="submit">Filter</button>
        </form>

    </div>
    <div>
        <table>
            <tbody>
            {{#filteredProductsList}}
            <tr>
                <td>{{id}}</td>
                <td>{{product.id}}</td>
                <td>{{product.name}}</td>
                <td>{{type}}</td>
                <td>{{price}}</td>
                <td>{{brand}}</td>
            </tr>
            {{/filteredProductsList}}
            </tbody>
        </table>
    </div>
</div>
</body>
</html>